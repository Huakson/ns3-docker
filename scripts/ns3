#!/usr/bin/env bash
# ============================================================================
# NS-3 Wrapper Script - Execute NS-3 commands inside Docker container
# Usage: ./scripts/ns3 run <simulation> [args]
# ============================================================================

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Script directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_DIR="$(dirname "$SCRIPT_DIR")"

# Load environment variables
if [[ -f "$PROJECT_DIR/.env" ]]; then
    source "$PROJECT_DIR/.env"
fi

# Default values
CONTAINER_NAME="${COMPOSE_PROJECT_NAME:-ns3}-runtime"
RESULTS_DIR="${RESULTS_DIR:-./results}"

# Helper functions
log_info() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

log_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

log_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

log_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Check if Docker is running
check_docker() {
    if ! docker info >/dev/null 2>&1; then
        log_error "Docker is not running. Please start Docker first."
        exit 1
    fi
}

# Check if container exists and is running
check_container() {
    if ! docker ps --format '{{.Names}}' | grep -q "^${CONTAINER_NAME}$"; then
        log_warning "Container '${CONTAINER_NAME}' is not running."
        log_info "Starting container..."
        cd "$PROJECT_DIR"
        docker compose up -d ns3
        sleep 2
    fi
}

# Ensure results directory exists
ensure_results_dir() {
    mkdir -p "$PROJECT_DIR/$RESULTS_DIR"
}

# Main execution
main() {
    check_docker
    check_container
    ensure_results_dir

    # If no arguments, show help
    if [[ $# -eq 0 ]]; then
        log_info "Running NS-3 help..."
        docker exec -it "$CONTAINER_NAME" ./ns3 --help
        exit 0
    fi

    # Capture all arguments for NS-3 wrapper or direct binary
    # This will be the full command line passed to sh -c
    local CONTAINER_CMD_STRING=""

    # Handle "run" command specifically for direct binary execution or wrapper fallback
    if [[ "$1" == "run" ]]; then
        local PROGRAM_NAME="$2"
        # Shift twice to get rid of "run" and "PROGRAM_NAME"
        shift 2
        local PROGRAM_ARGS_ARRAY=("$@") # Capture remaining args as array

        # Build quoted string for program args for sh -c
        local QUOTED_PROGRAM_ARGS=""
        for arg in "${PROGRAM_ARGS_ARRAY[@]}"; do
            QUOTED_PROGRAM_ARGS+=$(printf "%q " "$arg")
        done
        # Trim trailing space
        QUOTED_PROGRAM_ARGS="${QUOTED_PROGRAM_ARGS% }"

        # Check if the direct binary exists inside the container
        if docker exec "$CONTAINER_NAME" [ -f "/ns3/build/$PROGRAM_NAME" ]; then
            log_info "Executing compiled binary directly: /ns3/build/$PROGRAM_NAME $QUOTED_PROGRAM_ARGS"
            CONTAINER_CMD_STRING="/ns3/build/$PROGRAM_NAME $QUOTED_PROGRAM_ARGS"
        else
            # Fallback to the standard NS-3 Python wrapper
            log_info "Executing via NS-3 Python wrapper: ./ns3 run $(printf "%q" "$PROGRAM_NAME") $QUOTED_PROGRAM_ARGS"
            CONTAINER_CMD_STRING="./ns3 run $(printf "%q" "$PROGRAM_NAME") $QUOTED_PROGRAM_ARGS"
        fi
    else
        # For non-"run" commands (e.g., "build", "configure")
        # Build quoted string for all arguments
        local QUOTED_ALL_ARGS=""
        for arg in "$@"; do
            QUOTED_ALL_ARGS+=$(printf "%q " "$arg")
        done
        QUOTED_ALL_ARGS="${QUOTED_ALL_ARGS% }"

        log_info "Executing standard NS-3 command: ./ns3 $QUOTED_ALL_ARGS"
        CONTAINER_CMD_STRING="./ns3 $QUOTED_ALL_ARGS"
    fi

    # Capture start time
    START_TIME=$(date +%s)

    # Execute the command inside the container
    # Use sh -c with the carefully quoted command string
    if docker exec -it "$CONTAINER_NAME" sh -c "$CONTAINER_CMD_STRING"; then
        END_TIME=$(date +%s)
        DURATION=$((END_TIME - START_TIME))
        log_success "Command completed in ${DURATION}s"

        # Check if results were generated
        if [[ -n "$(ls -A "$PROJECT_DIR/$RESULTS_DIR" 2>/dev/null)" ]]; then
            log_success "Results saved to: $RESULTS_DIR/"
            ls -lh "$PROJECT_DIR/$RESULTS_DIR" | tail -n +2
        fi
        exit 0
    else
        EXIT_CODE=$?
        log_error "Command failed with exit code $EXIT_CODE"
        exit $EXIT_CODE
    fi
}

main "$@"