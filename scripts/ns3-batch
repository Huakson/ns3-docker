#!/usr/bin/env bash
# ============================================================================
# NS-3 Batch Script - Execute batch simulations (like Python scripts)
# Usage: ./scripts/ns3-batch <script.py>
# ============================================================================

set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
MAGENTA='\033[0;35m'
NC='\033[0m'

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_DIR="$(dirname "$SCRIPT_DIR")"

if [[ -f "$PROJECT_DIR/.env" ]]; then
    source "$PROJECT_DIR/.env"
fi

CONTAINER_NAME="${COMPOSE_PROJECT_NAME:-ns3}-runtime"

log_info() { echo -e "${BLUE}[INFO]${NC} $1"; }
log_success() { echo -e "${GREEN}[SUCCESS]${NC} $1"; }
log_error() { echo -e "${RED}[ERROR]${NC} $1"; }
log_batch() { echo -e "${MAGENTA}[BATCH]${NC} $1"; }

check_docker() {
    if ! docker info >/dev/null 2>&1; then
        log_error "Docker is not running"
        exit 1
    fi
}

check_container() {
    if ! docker ps --format '{{.Names}}' | grep -q "^${CONTAINER_NAME}$"; then
        log_info "Starting container..."
        cd "$PROJECT_DIR"
        docker compose up -d ns3
        sleep 2
    fi
}

main() {
    check_docker
    check_container

    if [[ $# -eq 0 ]]; then
        log_error "Usage: ./scripts/ns3-batch <command>"
        log_info "Example: ./scripts/ns3-batch python3 scratch/sim2.py"
        exit 1
    fi

    local COMMAND="$*"

    log_batch "Starting batch execution..."
    log_info "Command: $COMMAND"

    START_TIME=$(date +%s)

    # Execute batch command
    if docker exec -it "$CONTAINER_NAME" bash -c "cd /ns3 && $COMMAND"; then
        END_TIME=$(date +%s)
        DURATION=$((END_TIME - START_TIME))
        MINUTES=$((DURATION / 60))
        SECONDS=$((DURATION % 60))

        log_success "Batch execution completed in ${MINUTES}m ${SECONDS}s"

        # Show results summary
        if [[ -n "$(ls -A "$PROJECT_DIR/$RESULTS_DIR" 2>/dev/null)" ]]; then
            log_info "Results summary:"
            echo ""
            find "$PROJECT_DIR/$RESULTS_DIR" -type f -name "*.csv" | head -5 | while read file; do
                echo "  - $(basename "$file")"
            done
            echo ""
            CSV_COUNT=$(find "$PROJECT_DIR/$RESULTS_DIR" -type f -name "*.csv" | wc -l)
            log_success "Generated $CSV_COUNT CSV files in $RESULTS_DIR/"
        fi
    else
        log_error "Batch execution failed"
        exit 1
    fi
}

main "$@"
